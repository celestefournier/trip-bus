<div class="card">
    <div class="company">
        <img src="{{ card.companyLogo }}" alt="Empresa de Ã´nibus">
    </div>
    <div class="hour">
        <time class="departure-time">{{ card.departureTime }}</time>
        <time class="return-time">{{ card.returnTime }}</time>
    </div>
    <div class="travel-route">
        <span class="station-departure">{{ card.stationDeparture }}</span>
        <span class="station-arrival">{{ card.stationArrival }}</span>
    </div>
    <div class="duration"><span>{{ card.duration }}</span></div>
    <div class="class"><span>{{ card.class }}</span></div>
    <div class="price"><span>R${{ card.price|replace({'.':","}) }}</span></div>
    <div class="search">
        <button class="search-btn">Selecionar</button>
    </div>
</div>